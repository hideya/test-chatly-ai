# Workflow definitions

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Full Stack App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Client Dev Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Tests"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Tests"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "README Verification"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Doc Verification"

[[workflows.workflow]]
name = "Full Stack App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Client Dev Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm install && npm run dev"
waitForPort = 3000

# Test configuration

[[workflows.workflow]]
name = "Frontend Tests"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "TEST_ENV=client npx vitest --config ./vitest.config.ts --dir ./client/src/test"

[[workflows.workflow]]
name = "Backend Tests"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "TEST_ENV=server npx vitest --config ./vitest.config.ts --dir ./server/test"

[[workflows.workflow]]
name = "README Verification"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cat README.md"

[[workflows.workflow]]
name = "Doc Verification"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ls -l README.md DEPLOYMENT.md && echo '=== README.md ===' && cat README.md && echo '=== DEPLOYMENT.md ===' && cat DEPLOYMENT.md"
